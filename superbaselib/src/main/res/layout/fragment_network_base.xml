<?xml version="1.0" encoding="utf-8"?>
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
                 android:background="@android:color/white"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/flyt_fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </FrameLayout>
        <LinearLayout
            android:id="@+id/ll_network_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_network_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:drawableTop="@drawable/icon_network"
                android:layout_marginTop="5dp"
                android:drawablePadding="10dip"
                android:text="呀，网络出问题啦"
                android:textColor="#1A1514"
                android:textSize="14sp"
                android:gravity="center"
                android:visibility="visible"/>
            <Button
                android:id="@+id/bt_error"
                android:layout_width="110dp"
                android:layout_height="32dp"
                android:layout_gravity="center_horizontal"
                android:background="#d91414"
                android:layout_marginTop="30dp"
                android:text="点击刷新"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:visibility="visible"/>
        </LinearLayout>
  <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:visibility="gone"
            android:progressDrawable="@drawable/progressbar"
      />
    

    </FrameLayout>
